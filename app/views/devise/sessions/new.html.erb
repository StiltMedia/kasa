<% navigation render 'navigation/interior' %>
<% body_class 'login' %>

<div class="logo">
  <%= link_to (image_tag 'https://s3-us-west-2.amazonaws.com/kasa-dev/images/Kasa.svg', class: 'img-responsive', alt: 'Kasa'), root_path %>
</div>

<div class="content">
  <h3 class="form-title">Log in</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
      <div class="alert alert-danger">
  			<span><%= alert %></span>
  		</div>
    <% end %>

  	<div class="form-group">
  		<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
  		<label class="control-label visible-ie8 visible-ie9">Username</label>
  		<%= f.email_field :email, class: 'form-control form-control-solid placeholder-no-fix', name: 'username', placeholder: 'Username', autocomplete: 'on' %>
  	</div>
  	<div class="form-group">
  		<label class="control-label visible-ie8 visible-ie9">Password</label>
  		<%= f.password_field :password, class:'form-control form-control-solid placeholder-no-fix', placeholder: "Password", name: "password", autocomplete: "off" %>
  	</div>
  	<div class="form-actions">
  		<%= f.submit "Login", class: 'btn btn-success uppercase' %>
      <% if devise_mapping.rememberable? -%>
  		   <label class="rememberme check"><%= f.check_box :remember_me, name: 'remember' %>Remember </label>
      <% end -%>
  		<%= link_to 'Forgot Password', new_user_password_path, class: 'forget-password' %>
  	</div>
  <% end %>
  <div class="login-options">
  	<h4>Or login with</h4>
  	<ul class="social-icons">
  		<li>
  			<a class="social-icon-color facebook" data-original-title="facebook" href="javascript:;"></a>
  		</li>
  		<li>
  			<a class="social-icon-color twitter" data-original-title="Twitter" href="javascript:;"></a>
  		</li>
  		<li>
  			<a class="social-icon-color googleplus" data-original-title="Goole Plus" href="javascript:;"></a>
  		</li>
  		<li>
  			<a class="social-icon-color linkedin" data-original-title="Linkedin" href="javascript:;"></a>
  		</li>
  	</ul>
  </div>
  <div class="create-account">
  	<p>
  		<%= link_to 'Create an Account', new_user_registration_path, class: 'uppercase' %>
  	</p>
  </div>
</div>

<div class="copyright">
	 2015 Â© Kasa.
</div>

<script>
  jQuery(document).ready(function() {
    Metronic.init(); // init metronic core components
    Layout.init(); // init current layout
    Login.init();
    Demo.init();
  });
</script>
