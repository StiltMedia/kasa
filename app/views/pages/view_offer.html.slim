= render 'shared/topbar'

/! steps
section.create-offer.review-offer.steps data-offer-id=@offer.id
  .container
    /! title
    .row
      .col-md-12
        .title.text-center
          h2 Offer Details
    /! .title
    /! content
    .row
      .inner-content
        .col-md-10.col-md-offset-1
          /! review block
          .review-block.property-info
            .blue-title
              h5 PROPERTY INFO
            .white-block
              a.edit.invisible href="javascript:review_edit_prop_info()"  Edit
              /! info content
              .info-content
                p
                  b ADDRESS
                p = @address
              /! .info content
              /! info content
              .info-content
                p
                  b AMOUNT YOU'D LIKE TO OFFER
                span = "$ "
                span = @offer.amount
               
              /! .info content
          /! review block
          /! review block
          .review-block.financing
            .blue-title
              h5 FINANCING
            .white-block
              a.edit.invisible href="javascript:review_edit_financing()"  Edit
              /! info content
              .info-content
                p
                  b HOW WILL YOU BE PAYING FOR YOUR HOME?
                - if @offer.funding_source == 'With Mortgage'
                  p With Mortgage
                - else
                  p Cash
              /! .info content
              /! info content
              .info-content
                p
                  b HAVE YOU BEEN PRE-APPROVED FOR A MORTGAGE?
                span = @offer.pre_approved || "-"
              /! .info content
              /! info content
              .info-content
                p
                  b MORTGAGE DOWN PAYMENT AMOUNT
                span = @offer.down_payment || "-"
                span = "%"
              /! .info content
          /! review block
          /! review block
          .review-block.order
            .blue-title
              h5 OFFER DETAILS
            .white-block
              a.edit.invisible href="javascript:review_edit_order()"  Edit
              /! info content
              .info-content
                p
                  b OFFER DETAILS AND COSTS SETTLEMENT
                - if @offer.standard_terms == "1"
                  p Use Standard Terms
                - else
                  p Customize My Terms
              /! .info content
              /! info content
              .info-content
                p
                  b LENGTH OF ESCROW
                span = @offer.downpayment_days || "-"
                span days after seller accepts your offer until close of escrow
              /! .info content
              /! info content
              .info-content
                p
                  b PLANNING ANY INSPECTIONS?
                - if @offer.planning_inspections == "1"
                  span Yes 
                  span = "*Your offer will be contigent on inspections"
                - else
                  span No 
                  span = "*Your offer will be contigent on inspections"
              /! .info content
              /! info content
              .info-content
                p
                  b REQUEST A PEST CONTROL REPORT?
                - if @offer.request_pest_report == "0"
                  p No
                - if @offer.request_pest_report == "1"
                  p You Pay
                - if @offer.request_pest_report == "2"
                  p Seller Pays
              /! .info content
              /! info content
              .info-content
                p
                  b REQUEST A 1 YEAR HOME WARRANTY?
                - if @offer.request_one_year_home_warranty == "0"
                  span No
                - if @offer.request_one_year_home_warranty == "1"
                  span You Pay
                - if @offer.request_one_year_home_warranty == "2"
                  span Seller Pays
              /! .info content
              /! info content
              .info-content
                p
                  b INITIAL "EARNEST MONEY" DEPOSIT
                span = "#{@offer.initial_deposit}%"
                |  *You must deposit this amount into escrow within 3 days of an accepted offer
              /! .info content
              /! info content
              .info-content
                p
                  b SPECIAL INSTRUCTIONS
                p = @offer.special_instructions || "-"
              /! .info content
              /! info content
              .info-content
                p
                  b PLANNING ANY INSPECTIONS?
                - if @offer.planning_inspections
                  span Yes 
                  span *Your offer will be contigent on inspections
                - else
                  span No
                  |  *Your offer will be contigent on inspections
              /! .info content
          /! review block
          /! review block
          .review-block.account-info
            .blue-title
              h5 ACCOUNT INFO
            .white-block
              a.edit.invisible href="javascript:review_edit_account_info()"  Edit
              /! info content
              .info-content.clearfix
                .review-inline
                  p
                    b NAME
                  p  = ( @offer.first_name.present? ? @offer.first_name : "Empty" )
                /! .info content
                /! info content
                .review-inline
                  p
                    b LAST NAME
                  p = ( @offer.last_name.present? ? @offer.last_name : "Empty" )
                /! .info content
                /! info content
                .review-inline
                  p
                    b EMAIL
                  p = current_user.email
                /! .info content
                /! info content
                .review-inline.review-info
                  p
                    b CURRENT ADDRESS
                  p = ( @offer.address.present? ? @offer.address : "Empty" )
                /! .info content
                /! info content
                .review-inline.review-info
                  p
                    b PHONE NUMBER
                  p = "222 222 2222"
              /! .info content
              hr/
              /! info content
              .info-content.clearfix.invisible
                .blue-title
                  h5 CO-BUYER
                .review-inline
                  p
                    b NAME
                  p Alex
                /! .info content
                /! info content
                .review-inline
                  p
                    b LAST NAME
                  p Gonzalez
                /! .info content
                /! info content
                .review-inline
                  p
                    b EMAIL
                  p lorem@imsaumasat.com
                /! .info content
          /! .review block
          /! review block
          .review-block.hide
            .blue-title
              h5 DOCUMENTS
            .white-block
              a.edit href="#"  Add
              /! info content
              .info-content
                ul.list-unstyled.list-inline
                  li
                    | Lorem Ims...pdf
                    span.remove-file X
                  li
                    | Lorem Ims...pdf
                    span.remove-file X
                  li
                    | Lorem Ims...pdf
                    span.remove-file X
              /! .info content
          /! .review block
        /! btn
        .review-btn.col-md-3.col-md-offset-8.text-right.invisible
          a.next-step.btn.btn-alt href="javascript:void(0)"  SUBMIT â†’
        /! .btn
    /! .content
/! .steps

