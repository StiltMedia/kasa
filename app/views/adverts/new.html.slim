            br
            .row
              .col-md-12
                 /! .input
                 .input-group
                   h5 REMARKS (INCL. CONTACT INFORMATION)
                   = best_in_place @property, :remarks, :place_holder => "Include some contact information ...", :inner_class => "w100pc textarea-themed", class: "look-like-textarea w100pc", :as => :textarea
            br

          /! .input
        /! btn
        .col-md-3.col-md-offset-7.text-right
    /! .content
    .row
      .inner-content style="padding: 50px 0"
        .col-md-3.col-md-offset-6.text-right
          a.next-step.btn.btn-alt.nohover href="#{"/adverts/new?step="+@next_step+"&propertyid="+@property.id.to_s}"
            span Next Step 
            i.fa.fa-long-arrow-right















  - if params[:step] == "4"
    /! content
    .row
      .inner-content
        .col-md-8.col-md-offset-2
          /! input
          .col-md-12
            .row
              .col-md-6
                 /! .input
