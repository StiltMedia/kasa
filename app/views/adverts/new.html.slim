            br



            .row
              .col-md-6
                 /! .input
                 .input-group
                   h5 BUILT (YEAR)
                   = best_in_place @property, :area, :place_holder => "", :inner_class => "w100pc", class: "look-like-input w100pc"
              .col-md-6
